# .env.example - DO NOT place secrets here. Use real secrets in deployment config.
# Backend
ASPNETCORE_ENVIRONMENT=Development
KOREAN_LOG_LEVEL=Information
ConnectionStrings__DefaultConnection=Host=localhost;Port=5432;Database=parfait_dev;Username=postgres;Password=postgres
JWT__Issuer=parfait.example
JWT__Audience=parfait_clients
JWT__Secret=ReplaceWithARealSecretOfAtLeast32Chars
JWT__AccessTokenExpirationMinutes=15
JWT__RefreshTokenExpirationDays=30
CORS__AllowedOrigins=http://localhost:5173

# Feature flags
FEATURES__EXCEL_IMPORT=true
FEATURES__BACKUP_SERVICE=false

# Koyeb / Vercel you'd set as secrets in their UI
KOYEB__APP_NAME=parfait-api
VERCEL__PROJECT=parfait-frontend
